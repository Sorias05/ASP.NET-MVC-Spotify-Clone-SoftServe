@model WebPractice.Data.Entities.Song

<h1>Edit Song</h1>

<form asp-action="Edit" method="post" class="row g-3" enctype="multipart/form-data">
    <div class="col-md-12">
        <label asp-for="Name" class="form-label">Name</label>
        <input asp-for="Name" type="text" class="form-control" placeholder="Enter song name">
        <span asp-validation-for="Name" class="form-text text-danger"></span>
    </div>
    <div class="col-md-12">
        <label asp-for="GenreId" class="form-label">Genre</label>
        <select asp-for="GenreId" asp-items="@ViewBag.GenreList" class="form-select">
            <option disabled selected>Choose...</option>
        </select>
        <span asp-validation-for="GenreId" class="form-text text-danger"></span>
    </div>
    <div class="col-md-12">
        <label asp-for="FilePath" class="form-label">MP3 File Name</label>
        <input asp-for="FilePath" type="text" class="form-control" readonly="@(true)">
        <span asp-validation-for="FilePath" class="form-text text-danger"></span>
    </div>
    <div class="col-md-12">
        <label asp-for="File" class="form-label">New MP3 File</label>
        <input asp-for="File" type="file" class="form-control">
        <span asp-validation-for="File" class="form-text text-danger"></span>
    </div>
    <div class="col-md-12">
        <input asp-for="AlbumId" type="hidden" class="form-control">
    </div>
    <div class="col-6">
        <a asp-action="Index" asp-route-id="@Model.AlbumId" class="btn btn-dark w-100">Back</a>
    </div>
    <div class="col-6">
        <button type="submit" class="btn btn-success w-100">Edit</button>
    </div>
</form>